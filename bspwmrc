#! /bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor VGA-1 -d Main1
bspc monitor HDMI-1 -d Main2 3 4

bspc config border_width 2
bspc config window_gap 12

bspc config split_ratio 0.52
bspc config borderless_monacle true
bspc config gapless_monacle true

xrdb -merge ~/.Xresources

picom -b &
feh --no-fehbg --bg-fill /usr/share/backgrounds/DesktopBackground1.jpg /usr/share/backgrounds/DesktopBackground2.jpg &
tint2 &
nm-applet &
pasystray &
